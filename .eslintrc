{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-var": "error",
    "semi": "error",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-await-in-loop": "off",
    "no-unused-vars": "warn",
    "no-continue": "off"
  }
}
